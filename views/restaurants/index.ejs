<% layout("layouts/boilerplate") %>
<h1 class="text-center mb-5"> All Restaurants</h1>    
<% for (let restaurant of restaurants) { %>
    <div class="card mb-3">
        <div class="row g-0">
          <div class="col-md-4">
            <img src="<%= restaurant.image %>" class="img-fluid rounded-start">
          </div>
          <div class="col-md-8">
            <div class="card-body">
              <h5 class="card-title"><%= restaurant.name %></h5>
              <p class="card-text"><%= restaurant.description %></p>
              <p class="card-text"><small class="text-body-secondary"><%= restaurant.address %></small></p>
              <a href="/restaurants/<%= restaurant._id %>" class="btn btn-primary">View <%= restaurant.name %></a>
            </div>
          </div>
        </div>
      </div>
<% } %>
   